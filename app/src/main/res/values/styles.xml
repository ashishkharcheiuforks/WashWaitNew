<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@color/whiteTextColor</item>
        <item name="android:textColorSecondary">#EEEEEE</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="bigWhiteText">
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textSize">38sp</item>
    </style>

    <style name="smallWhiteText">
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
